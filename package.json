{
  "name": "tls-project",
  "version": "1.0.0",
  "description": "A comprehensive TLS (Transport Layer Security) implementation project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "prepublish": "npm run clean && npm run build"
  },
  "keywords": [
    "tls",
    "ssl",
    "crypto",
    "security",
    "encryption",
    "certificates"
  ],
  "author": "HansChung",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HansChung/TLS.git"
  },
  "dependencies": {
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/node-forge": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}